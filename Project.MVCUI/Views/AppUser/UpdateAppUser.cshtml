@model AddUpdateAppUserPageVM

@{
    ViewData["Title"] = "UpdateAppUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-action="UpdateAppUser" method="post">
    <input type="hidden" asp-for="AppUser.ID" />

    <div class="form-group">
        <label asp-for="AppUser.UserName">Username:</label>
        <input type="text" asp-for="AppUser.UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AppUser.Password">Password:</label>
        <input type="password" asp-for="AppUser.Password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AppUser.Profile.FirstName">First Name:</label>
        <input type="text" asp-for="AppUser.Profile.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AppUser.Profile.LastName">Last Name:</label>
        <input type="text" asp-for="AppUser.Profile.LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Profile.FirstName">Profile First Name:</label>
        <input type="text" asp-for="Profile.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Profile.LastName">Profile Last Name:</label>
        <input type="text" asp-for="Profile.LastName" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
