@model AddUpdateCategoryPageVM
@{
    ViewData["Title"] = "AddCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Kategori Adı</label>
            @Html.TextBoxFor(x => x.Category.CategoryName, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Açıklama</label>
            @Html.TextBoxFor(x => x.Category.Description, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">

        <div class="col-sm-10">
            <button class="btn-primary">Ekle</button>
        </div>
    </div>

}

