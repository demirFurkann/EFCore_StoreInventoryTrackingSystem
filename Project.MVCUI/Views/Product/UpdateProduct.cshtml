@model AddUpdateProductPageVM
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(x=> x.Product.ID)
    <h2 style="text-align:center">Ürün Güncelleme Sayfası</h2>

    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Ürün Adı</label>
            @Html.TextBoxFor(x => x.Product.ProductName, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Açıklama</label>
            @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Açıklama</label>
            @Html.TextBoxFor(x => x.Product.PurchasePrice, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Açıklama</label>
            @Html.TextBoxFor(x => x.Product.SalePrice, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Açıklama</label>
            @Html.TextBoxFor(x => x.Product.UnitsInStock, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group">

        <div class="col-sm-10">
            <label class="row-cols-4">Açıklama</label>
            @Html.DropDownListFor(x=> x.Product.CategoryID,new SelectList(Model.Categories,"ID","CategoryName"),"Lütfen Seçiniz")
        </div>
    </div>

    <div class="form-group">

        <div class="col-sm-10">
            <button class="btn-primary">Ekle</button>
        </div>
    </div>






   
 
}

